.portfolio .portfolio-scroll .portfolio-scroll-list \
    .portfolio-scroll-list-item
  float left
  responsive margin-left 50px 25px

  &:first-child
    margin-left 0

  // right margin on item doesn't work
  // and padding on parent element doesn't work, so
  @media (max-width: 767px)
    &:first-child
      padding-left 70px
    &:last-child
      padding-right 70px

  .portfolio-scroll-list-item-link
    display block

    // make top shadow visible
    margin-top 1px

    border 5px solid border
    box-shadow 0 0 0 1px shadow
    circle()

    // add inner shadow on image if rgba is supported
    .rgba &:before
      @media (min-width: 768px)
        content ""
        position absolute
        display block
        square 220px
        box-shadow inset 0 2px 3px rgba(0, 0, 0, .5)
        circle()

      @media (min-width: 980px)
        square 240px

    .portfolio-scroll-list-item-link-image
      display block
      responsive square 240px 220px 160px
      border-radius 50%
