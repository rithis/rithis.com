.portfolio .portfolio-scroll
  .portfolio-scroll-list
    responsive width 850px 740px 700px
    responsive margin, 60px auto 140px, \
                           60px auto 100px, \
                           0 auto
    padding 0
    list-style none
    clearfix()

  // make list scrollable if it does not fit to screen
  @media (max-width: 767px)
    width 100%
    margin 20px 0
    overflow-x scroll
    overflow-y hidden
