// circle badge on wave helper
badge(offset, offset-tablet, image, size, background)
  responsive display block same none
  position absolute
  left 50%
  square 128px
  responsive margin-top offset offset-tablet
  margin-left (-@width / 2)
  image image
  circle()

  // use vector icon in supported browsers
  .multiplebgs.backgroundsize.svg &
    background-image url("/images/" + image + ".svg"), url("/images/" + background + "-background.png")
    background-size size size, 100px 100px
    background-repeat no-repeat, repeat
    background-position 50%

    @media all and (-webkit-min-device-pixel-ratio: 1.5)
      background-image url("/images/" + image ".svg"), url("/images/" + background + "-background@2x.png")
