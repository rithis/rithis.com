extends layout

block title
  title Студия Ритхис

block header
  .header.header-index
    h1.logo.logo-index Студия Ритхис
    mixin contacts("contacts-header contacts-index")
    hr.header-divider


prepend body
  .slogan
    a#slogan.slogan-badge
    p.slogan-text Разработаем ваш проект качественно и в срок
    hr.slogan-divider

block content

  .portfolio.portfolio-index(data-portfolio)
    a#portfolio.portfolio-badge
    h2.portfolio-title Последние работы

    .portfolio-scroll
      ul.portfolio-scroll-list
        li.portfolio-scroll-list-item(data-ng-repeat="project in portfolio")
          a.portfolio-scroll-list-item-link(href="{{ getProjectUrl(project) }}")
            img.portfolio-scroll-list-item-link-image(data-ng-src="{{ project.logo }}", alt="{{ project.name }}")
          h3.portfolio-scroll-list-item-title
            a.portfolio-scroll-list-item-title-link(href="{{ getProjectUrl(project) }}") {{ project.name }}

    hr.portfolio-divider
  

  .links
    .links-item.links-item-portfolio
      a.links-item-link(href="#!/portfolio") Портфолио
    .links-item.links-item-vacancies
      a.links-item-link(href="#!/jobs") Вакансии
    .links-item.links-item-freelansim
      a.links-item-link(href="http://freelansim.ru/freelancers/rithis") Фрилансим
    .links-item.links-item-card
      a.links-item-link(href="https://elba.kontur.ru/card/rithis") Реквизитка
    .links-item.links-item-github
      a.links-item-link(href="https://github.com/rithis") Github
            
block footer
  .footer.footer-index
    mixin contacts("contacts-footer contacts-index", true)
    p.copyrights © 2012—2013 Студия Ритхис
